<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"


    android:paddingRight="0dp"
    >
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/small_notification_image"

        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/small_notification_image"
        android:id="@+id/notification_small_bg"
        android:background="@color/colorMi"
        >




    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/small_notification_image"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:id="@+id/small_notification_info"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/song_name"
            android:ellipsize="end"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:id="@+id/small_notification_song_name"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/artist"
            android:maxLines="1"
            android:textSize="14sp"
            android:ellipsize="end"

            android:id="@+id/small_notification_artist"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/small_notification_info"
        android:gravity="center_vertical"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/pre"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:id="@+id/small_previous"

            />
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/play"
            android:layout_marginRight="20dp"
            android:scaleType="center"
            android:layout_weight="1"

            android:id="@+id/small_play"

            />
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:id="@+id/small_next"
            android:src="@drawable/next"
            android:scaleType="center"
            />




    </LinearLayout>

    </LinearLayout>


</RelativeLayout>